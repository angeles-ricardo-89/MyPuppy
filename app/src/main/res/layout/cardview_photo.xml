<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPet"

    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/cvphoto_hmargin"
    android:layout_marginBottom="@dimen/cvphoto_bmargin"
    card_view:cardCornerRadius="@dimen/cvpet_radius"
    android:layout_width="@dimen/cvphoto_maxwidth"
    >

    <RelativeLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/cvphoto_maxheight"
            android:id="@+id/ivPetPicture"
            android:src="@drawable/perro"
            android:background="@color/colorAccent"
            android:maxHeight="@dimen/cvphoto_maxheight"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPetPicture"

            android:id="@+id/ivBones"
            android:src="@drawable/icons8_hueso_del_perro_48_color"
            />
        <TextView
            android:id="@+id/tvBonies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPetPicture"
            android:layout_toRightOf="@id/ivBones"
            android:textSize="@dimen/cvpet_textname"
            android:text="5"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>